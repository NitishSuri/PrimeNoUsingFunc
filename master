# PrimeNoUsingFunc
37th program on c
#include<stdio.h>
int checkprime(int);
int main()
{
int n ,result;
printf("enter the number you want to check \n");
scanf("%d",&n);

result=checkprime(n);

if(result==1)
{
printf("the number is prime \n");
}
else
{
printf("the number is not a prime \n");
}
return(0);
}
int checkprime(int a)
{
int c;
for(c=2;c=a-1;c++)
{
if(a%c==0)
{
return 0;
}
else 
{
return 1;
}
}
}
